{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "run-p build:*",
    "prebuild:nest": "run-s clean:nest prisma:generate",
    "build:nest": "nest build",
    "clean:nest": "rimraf dist",
    "cspell": "cspell --gitignore --cache --config cspell.json '**'",
    "predev": "run-p prisma:generate",
    "dev": "run-p dev:nest",
    "predev:nest": "run-p kill-port:nest",
    "dev:nest": "nest start --watch",
    "eslint": "eslint --fix --config .eslintrc.js --cache .",
    "find-deadcode": "ts-prune -p tsconfig.json --error --skip src/pagination/pagination.model.ts",
    "format": "prettier --ignore-path .prettierignore --config .prettierrc.json --cache --write .",
    "kill-port:nest": "kill-port 5001",
    "lint": "run-p eslint cspell type-check find-deadcode",
    "postlint": "run-p format",
    "prisma:generate": "DISABLE_ERD=true prisma generate",
    "prisma:init": "run-s prisma:generate prisma:migrate:dev prisma:seed",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prod": "node dist/main",
    "pretest": "run-p prisma:generate",
    "test": "jest",
    "type-check": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.17",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.1",
    "@nestjs/graphql": "^10.0.18",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.1",
    "@nestjs/serve-static": "^3.0.0",
    "@prisma/client": "^4.0.0",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "prisma": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "supertest": "^6.2.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@nestjs/testing": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/jest": "^28.1.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tsconfig": "*"
  },
  "prisma": {
    "seed": "ts-node --transpile-only --skipProject prisma/seed.ts"
  }
}
