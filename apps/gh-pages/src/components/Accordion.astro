---
export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<div class="collapse collapse-arrow border hover:bg-gray-100">
  <input type="checkbox" class="peer" />
  <div
    class="text-xl collapse-title text-gray-500 peer-checked:text-primary-content font-medium peer-checked:bg-gray-100"
  >
    {title}
  </div>
  <div class="collapse-content text-primary-content !p-0 bg-white">
    <slot />
  </div>
</div>
