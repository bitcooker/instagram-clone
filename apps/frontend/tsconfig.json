{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    // Modules
    "baseUrl": "./",
    "module": "esnext",
    // Emit
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    // JavaScript Support
    "allowJs": true,
    // Language and Environment
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
