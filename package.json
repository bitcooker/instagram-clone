{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "cypress": "cypress open",
    "dev": "turbo run dev --parallel --no-cache --continue",
    "format": "prettier --ignore-path .prettierignore --config .prettierrc.json --cache --write .",
    "heroku-postbuild": "turbo run build --scope=backend --include-dependencies --no-deps",
    "lint": "cspell --cache --config cspell.json '**'",
    "prepare": "husky install",
    "test": "turbo run test --parallel --continue=false",
    "turbo:format": "turbo run format --parallel --continue=false",
    "turbo:lint": "turbo run lint --parallel --continue=false"
  },
  "dependencies": {
    "graphql": "^16.5.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@kentayamada-dev/eslint-config-base": "^1.0.0",
    "cspell": "^6.2.3",
    "cypress": "^10.3.0",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "kill-port": "^2.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "turbo": "^1.3.1",
    "yarn-upgrade-all": "^0.7.1"
  },
  "packageManager": "yarn@1.22.17",
  "engines": {
    "node": "16.x"
  }
}
