{
  "license": "MIT",
  "name": "app",
  "packageManager": "yarn@1.22.17",
  "private": true,
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.1.6"
  },
  "scripts": {
    "heroku-postbuild": "if [ $FRONTEND_ENV ]; then yarn turbo run build --scope=frontend --include-dependencies --no-deps; elif [ $BACKEND_ENV ]; then yarn turbo run build --scope=backend --include-dependencies --no-deps; else echo no environment detected, please set FRONTEND_ENV or BACKEND_ENV; fi",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "format": "turbo run format --parallel --continue=false",
    "kill-port:backend": "kill-port 5001",
    "kill-port:frontend": "kill-port 3000",
    "lint": "turbo run lint --parallel --continue=false",
    "lint:cspell": "turbo run cspell --parallel --continue=false",
    "lint:eslint": "turbo run eslint --parallel --continue=false",
    "lint:type-check": "turbo run type-check --parallel --continue=false",
    "prelint": "run-p format",
    "prepare": "husky install",
    "preprod": "run-p kill-port:*",
    "prod": "turbo run prod --parallel --no-cache",
    "test": "turbo run test --parallel --continue=false"
  }
}
