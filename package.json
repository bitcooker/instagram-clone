{
  "license": "MIT",
  "name": "shared-package",
  "packageManager": "yarn@1.22.17",
  "private": true,
  "version": "0.0.0",
  "cspell": {
    "files": [
      "apps/{frontend,backend}/src/**/*"
    ],
    "language": "en",
    "version": "0.2",
    "words": [
      "nestjs",
      "Fastify",
      "chakra"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "quoteProps": "consistent"
  },
  "lint-staged": {
    "apps/{frontend,backend}/src/**/*": [
      "prettier --write",
      "eslint"
    ]
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "kill-port": "^1.6.1",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.1.6"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "format": "turbo run format --parallel --continue=false",
    "kill-port:backend": "kill-port 5001",
    "kill-port:frontend": "kill-port 3000",
    "lint": "run-s lint:*",
    "lint:cspell": "turbo run cspell --parallel --continue=false",
    "lint:eslint": "turbo run lint --parallel --continue=false",
    "lint:type-check": "turbo run type-check --parallel --continue=false",
    "prelint": "run-s format",
    "prepare": "husky install",
    "preprod": "run-s kill-port:*",
    "prod": "turbo run prod --parallel --no-cache",
    "test": "turbo run test --parallel --continue=false"
  }
}
